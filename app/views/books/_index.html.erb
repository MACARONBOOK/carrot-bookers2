<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>

        <% if current_user.favorited_by?(book.id) %>
          <td>
          <%= link_to destroy_favorite_path(book), method: :delete do %><i class="fas fa-heart unlike-btn"></i><%= book.favorites.count %>
          <% end %>
          </td>
        <% else %>
          <td>
          <%= link_to create_favorite_path(book), method: :post do %><i class="far fa-heart like-btn"></i><%= book.favorites.count %>
          <% end %>
          </td>
        <% end %>


      </tr>
    <% end %>
  </tbody>
</table>